{
  "name": "mini-webshop-api",
  "version": "1.0.0",
  "description": "Modern REST API for mini webshop demo with TypeScript, Express, and Prisma",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src -e ts --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "db:migrate:create": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset --force && pnpm run db:seed",
    "db:nuke": "pnpm run docker:clean && rm -rf prisma/migrations && rm -rf node_modules/.prisma",
    "db:setup": "pnpm run docker:up && sleep 3 && pnpm run db:migrate:create && pnpm run db:seed",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed"
  },
  "keywords": ["typescript", "express", "prisma", "postgresql", "rest-api", "demo", "webshop", "e-commerce"],
  "author": "SchÃ¶n Ferenc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/schonferenc/mini-webshop"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "sanitize-html": "^2.14.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/sanitize-html": "^2.13.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  }
}